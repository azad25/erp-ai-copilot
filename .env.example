# ERP AI Copilot Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/erp_copilot
MONGODB_URL=mongodb://localhost:27017/erp_copilot

# Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=

# Message Queue
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PREFIX=erp-copilot

# LLM Service Configuration

# Ollama (Local Models)
OLLAMA_BASE_URL=http://localhost:11434

# OpenAI (GPT Models)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (Claude Models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Default Provider Selection
DEFAULT_LLM_PROVIDER=ollama
DEFAULT_MODEL=llama2

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=/tmp/erp-copilot.log

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090